<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadText" parent="Theme.PW_EcommerceShop">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeadText18" parent="HeadText">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SubHeadText" parent="Theme.PW_EcommerceShop">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grey_60</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="BoldHintTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/grey_60</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedButton" parent="Theme.PW_EcommerceShop">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorControlNormal">@color/grey_60</item>
    </style>





    <style name="ToggleButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="ShapeAppearanceOverlayChip" parent="">>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.MaterialComponents.Card.Custom" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayChip</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Custom" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayChip</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?colorAccent</item>
    </style>

    <style name="StyleTitleSelector">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:clickable">true</item>

    </style>


    <style name="SimpleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:fontFamily">sans-serif-medium</item>

    </style>


    <style name="SimpleTextViewSelected" parent="SimpleTextView">
        <item name="android:textColor">@color/blue_grey_50</item>

        <item name="android:background">@drawable/bg_round_gray3</item>
        <item name="android:backgroundTint">@color/black</item>

    </style>

    <style name="SimpleTextViewUnSelected" parent="SimpleTextView">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:background">@drawable/corners_round_gray3</item>
        <item name="android:backgroundTint">@null</item>

    </style>


    <style name="PaddingFragmentWithoutActionBar">
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingRight">@dimen/padding_general</item>
        <item name="android:paddingLeft">@dimen/padding_general</item>
        <item name="android:paddingBottom">@dimen/padding_general</item>
    </style>




</resources>
